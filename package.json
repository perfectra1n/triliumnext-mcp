{
  "name": "triliumnext-mcp",
  "version": "1.0.0",
  "description": "MCP server for TriliumNext note-taking application",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "triliumnext-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://gitea.perfectra1n.com/perf3ct/triliumnext-mcp"
  },
  "keywords": [
    "mcp",
    "trilium",
    "triliumnext",
    "notes",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/marked": "^5.0.2",
    "@types/node": "^25.0.9",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "testcontainers": "^11.11.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "file-type": "^21.3.0",
    "marked": "^17.0.1",
    "zod": "^4.3.5"
  }
}
